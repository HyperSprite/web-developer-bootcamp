<% include ./partials/header %>
<!-- blog-new.ejs -->

<div class="ui huge header">Edit <%= blog.title %></div>
  <form class="ui form" action="/blog/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
      <label>Title</label>
      <input type="text" name="blog[title]" value="<%= blog.title %>" placeholer="title">
    </div>
  <div class="field">
    <label>Image URL</label>
    <input type="text" name="blog[image]" value="<%= blog.image %>" placeholer="image">
  </div>
  <div class="field">
    <label>Description</label>
    <textarea name="blog[body]" placeholer="Add content here"><%= blog.body %></textarea>
  </div>
  <button class="ui green button" type="submit">Save</button>
  <button class="ui yellow button" type="reset">Reset</button>
  <button class="ui blue button" type="cancel">Cancel</button>
  <button form="delete-form" class="ui red button" type="Delete">Delete</button>
</form>
<form id="delete-form" action="/blog/<%= blog._id %>?_method=DELETE" method="POST">

<!-- /blog-new.ejs -->
