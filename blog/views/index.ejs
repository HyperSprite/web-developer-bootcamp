<% include ./partials/header %>
<div class"ui huge header">RESTful Blog App
</div>

<div class="ui top attached segment">
<div class="ui divided items">
<% blog.forEach(function(blog) { %>

  <div class="item">
    <div class="image">
    <img src="<%= blog.image %>">
    </div>
    <div class="content">
      <a href="/blog/<%= blog._id %>"><%= blog.title.toUpperCase() %></a>
      <div class="meta">
        <span><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blog.body.substring(0, 100) %></p>
      </div>
      <div class="extra">
        <a class="ui basic red button" href="/blog/<%= blog._id %>">
        Read More<i class"right chevron icon"></i>
        </a>
      </div>
    </div>
  </div>
 <% }) %>
</div>
</div>
<% include ./partials/footer %>
