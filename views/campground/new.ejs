<div class="row">
    <h1>Create a New Campground</h1>
    <form action="/campgrounds" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="name" placeholder="Campground Name">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="image" placeholder="Image URL">
    </div>
    <div class="form-group">
      <textarea class="form-control" rows="4" cols="50" name="description" placeholder="What did you think?"></textarea>
    </div>
    <div class="form-group">
      <button class="btn btn-lg btn-primary btn-block">Submit!</button>
    </div>
  </form>

  <a href="/campgrounds">Nevermind, go back</a>
</div>
