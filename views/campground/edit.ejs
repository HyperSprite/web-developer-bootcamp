<% include ../partials/header %>
<!-- index.ejs -->



<div class="row">
    <h1>Edit <%= campground.name %></h1>
    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
    </div>
    <div class="form-group">
      <textarea class="form-control" rows="4" cols="50" name="campground[description]"><%= campground.description %></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-lg btn-primary btn-block">Save!</button>
      <button type="reset" class="btn btn-lg btn-default btn-block">Reset</button>
    </div>
  </form>

  <a href="/campgrounds">Nevermind, go back</a>
</div>
<!-- /index.ejs -->
<%include ../partials/footer %>
