<!-- comment/newejs -->

<div class="row">
<h1>Create a New Comment for <%= campground.name %></h1>
  <form action="/campgrounds/<%= campground._id %>/comment" method="POST">
    <div class="form-group">
      <textarea class="form-control" name="data[text]" placeholder="Type your comment"></textarea>
    </div>
    <div class="form-group">
      <input type="text" name="data[author]" placeholder="Author">
    </div>
    <div class="form-group">
      <button type="submit">Submit</button>
    </div>
</form>
</div>


