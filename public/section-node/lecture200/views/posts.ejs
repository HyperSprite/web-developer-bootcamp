<!-- posts.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>The Posts Page</title>
  <link rel="stylesheet" type="text/css" href="css/app.css">
</head>
<body>

<h1>The Post Page</h1>

<ul>
  <% for(var i = 0; i < posts.length; i++) { %>
  <li><%=posts[i].title %> - by <strong><%= posts[1].author %></strong></li>
  <% } %>
  <% posts.forEach(function(post) { %>
    <li><%= post.title %> - by <strong><%= post.author %></strong></li>
  <% }) %>
</ul>



</body>
</html>
